  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "(lldb) arraysAndFunctionPointers",
      "program": "${workspaceFolder}/bin/arraysAndFunctionPointers",
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "runMake", // THIS IS IMPORTANT
    },
    {
      "name": "(gdb) arraysAndFunctionPointers",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/arraysAndFunctionPointers", // THIS IS IMPORTANT
      "args": [],
      "stopAtEntry": true, // THIS IS IMPORTANT 
      "cwd": "${workspaceFolder}",  
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "runMake", // THIS IS IMPORTANT
    }
  ]
}
